# Neg

class Neg =
    => neg : Self -> Self

member Int of Neg =
    => neg = fn x => -x

member Num of Neg =
    => neg = fn x => -x

# Add

class Add =
    => add : Self -> Self -> Self

member Nat of Add =
    => add = fn x, y => x + y

member Int of Add =
    => add = fn x, y => x + y

member Num of Add =
    => add = fn x, y => x + y

